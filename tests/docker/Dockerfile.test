# Dockerfile for testing installation on Raspberry Pi OS
FROM debian:bullseye

# Metadata
LABEL maintainer="Ad Detection Team"
LABEL description="Test environment for Ad Detection installation"

# Install basic dependencies
RUN apt-get update && apt-get install -y \
    sudo \
    systemd \
    systemd-sysv \
    python3 \
    python3-pip \
    python3-venv \
    git \
    curl \
    wget \
    && rm -rf /var/lib/apt/lists/*

# Create pi user (similar to Raspberry Pi OS)
RUN useradd -m -s /bin/bash -G sudo pi && \
    echo "pi:raspberry" | chpasswd && \
    echo "pi ALL=(ALL) NOPASSWD:ALL" >> /etc/sudoers

# Create necessary directories
RUN mkdir -p /opt/ad-detection \
    /var/lib/ad-detection \
    /var/log/ad-detection

# Set working directory
WORKDIR /opt/ad-detection

# Copy repository (will be mounted as volume in docker-compose)
# COPY . /opt/ad-detection

# Expose web interface port
EXPOSE 8080

# Default command
CMD ["/bin/bash"]
