# Edge Device Configuration
# Copy to /etc/ad-detection/edge-device.env and customize

# Device Identification
DEVICE_ID=rpi-001
LOCATION_ID=1

# Cloud API
CLOUD_API_URL=https://api.example.com
CLOUD_API_KEY=your-api-key-here

# Device Role (coordinator or worker)
DEVICE_ROLE=worker

# Ad Response Strategy
# Options: pip_only, channel_change, input_switch, pip_with_mute
AD_RESPONSE_STRATEGY=pip_only

# Video Configuration
# Options: 720p30, 720p60, 1080p30, 1080p60
VIDEO_MODE=720p30

# TV Control
ENABLE_TV_CONTROL=false
TV_ORIGINAL_CHANNEL=2-1
TV_ALTERNATE_CHANNEL=5-1

# TV Control Methods
IR_ENABLED=true
IR_REMOTE_NAME=samsung
IR_DEVICE=/dev/lirc0

CEC_ENABLED=true

HTTP_ENABLED=false
HTTP_TV_URL=http://192.168.1.100:8080

BLUETOOTH_ENABLED=false

# Cloud Reporting
ENABLE_HEARTBEAT=true
ENABLE_HEALTH_REPORTING=true
ENABLE_TELEMETRY_REPORTING=true
ENABLE_FIRMWARE_CHECKS=true

HEARTBEAT_INTERVAL_SEC=30
HEALTH_INTERVAL_SEC=300
TELEMETRY_INTERVAL_SEC=3600
FIRMWARE_CHECK_INTERVAL_SEC=3600

# Logging
LOG_LEVEL=INFO
LOG_FILE=/var/log/ad-detection/edge-device.log

# Performance
MAX_LATENCY_MS=100
TARGET_FPS=30
